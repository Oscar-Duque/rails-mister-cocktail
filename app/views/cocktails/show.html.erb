<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %></li>
  <% end %>
  <li><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></li>
</ul>

<%= link_to 'Back', cocktails_path %>
